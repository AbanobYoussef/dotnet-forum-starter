@model Forum.Web.Models.Forum.ForumIndexModel

<div class="container body-content">
    <h3>Browse Forums</h3>
    <div id="forumIndexContent">
        <table class="table table-hover" id="forumIndexTable">
            <tbody>
                @foreach (var forum in Model.ForumList)
                {
                    <tr>
                        <td>
                            <div class="forumLogo" style="background-image: url(@forum.ImageUrl); background-size:100%"></div>
                            <div class="forumData">
                                <div class="forumTitle">
                                    @forum.Name
                                </div>
                                <div class="forumSubTitle">
                                    @if (forum.LatestPost.Author != "")
                                    {
                                        <div>Latest Post: <span class="postTitle">@forum.LatestPost.Title</span> by <span class="postUser">@forum.LatestPost.Author</span> on <span class="postDate">@forum.LatestPost.DatePosted</span></div>
                                    }

                                    else
                                    {
                                        <span>No posts yet!</span>
                                    }
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="forumPostCount">
                                @forum.NumberOfPosts Posts
                            </div>
                            <div class="forumMemberCount">
                                @forum.NumberOfUsers Users
                            </div>
                        </td>
                        <td>
                            <div class="forumDescription">
                                @forum.Description
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
