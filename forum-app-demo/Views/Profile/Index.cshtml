@model Forum.Web.Models.ApplicationUser.ProfileModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Profile | @Model.Username
        </div>
        @if (Context.User.Identity.IsAuthenticated && Context.User.Identity.Name == Model.Username)
        {
            <span id="headingBtn"><a asp-controller="Profile" asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-newReply">Edit Profile</a></span>
        }
    </div>
    @if (Context.User.Identity.IsAuthenticated)
    {
        <div class="row">
            <div class="col-md-4 userProfileImageContainer">
                <div id="userProfileImage" style="background-image: url(@Model.ProfileImageUrl); background-size:100%;"></div>
            </div>
            <div class="col-md-8 userProfileData">
                <div id="userEmail"></div>
                <div id="userDate"></div>
                <div id="userBio"></div>
            </div>
        </div>
    }
</div>
